server {
    listen 80 http2;
    server_name {{ item.domain }};
    return 301 https://$host$request_uri;
}

{% if item.redirects | default(False) %}
{% for redirect in item.redirects %}
server {
    listen 443 ssl http2;
    ssl on;
    ssl_certificate {{ server_crt_dir }}/{{ redirect.filename | default(redirect.from) }}/server.crt;
    ssl_certificate_key {{ server_crt_dir }}/{{ redirect.filename | default(redirect.from) }}/server.key;
    server_name {{ redirect.from }};
    return 301 https://{{ redirect.to }}$request_uri;
}
{% endfor %}
{% endif %}
