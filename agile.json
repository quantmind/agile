{
    "options": {
        "bucket": "quantmind-docs"
    },
    "github": {
        "pulsar-agile": {
            "python_module": "agile",
            "version": "agile.__version__"
        }
    },
    "shell": {
        "pypi": {
            "command": "{{ python }} setup.py sdist"
        },
        "clean": {
            "command": ["rm -rf build",
                        "rm -rf dist",
                        "rm -rf *.log",
                        "rm -rf *.egg-info"]
        }
    },
    "tasks": {
        "clean": {
            "description": "removed build files and directories",
            "command": [
                "shell:clean"
            ]
        },
        "release": {
            "description": "release a new version to github and create a pypi bundle",
            "command": [
                "github:pulsar-agile",
                "shell:pypi"
            ]
        }
    }
}
