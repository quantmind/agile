{
    "vars": {
        "agile_version": "agile.__version__"
    },
    "github": {
        "agile": {
            "version": "{{ agile_version }}",
            "release_notes": "docs/history"
        }
    },
    "shell": {
        "clean": {
            "command": ["rm -rf build",
                        "rm -rf dist",
                        "rm -rf *.log",
                        "rm -rf *.egg-info"]
        }
    },
    "tasks": {
        "release": {
            "description": "release a new version to github and create a pypi bundle",
            "command": [
                "github"
            ]
        }
    }
}
